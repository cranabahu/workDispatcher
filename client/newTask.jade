template(name="newTask")
   #page-wrapper
      .row
         .col-lg-12
            h1.page-header New Task
      .row
         .col-lg-12
            .panel.panel-default
               .panel-heading
                  button.btn.btn-primary.btn-circle(type="")
                     i.fa.fa-twitch
                  label(style="color:green;font-size:150%")  Create
               .panel-body
                  .row
                     .col-lg-6
                        form(id="frmNewTask" data-parsley-validate)
                           .form-group
                              p(style="color:orange;font-size:150%")
                                 label Task Information
                              label Repair part
                              input.form-control.repairPart(required, type="text", name="repairPart")
                              label Serverity
                              select.form-control(required, name="serverity")
                                 option Normal
                                 option High
                                 option Critical
                              label Due Date
                              input.form-control(required, type="date", name='taskDuedate')
                              label Task Description
                              textarea.form-control(required, rows="3", name="taskDesc")
                              p(style="color:orange;font-size:150%")
                                 label Customer Information
                              //label Task Id
                              //input.form-control(type="text", name="taskId")
                              label Customer
                              input.form-control(required, type="text", name="customer" req)
                              label Address
                              textarea.form-control(required, rows="3", name="custFullAddr", id="fullAddr")
                              label Town
                              textarea.form-control(required, rows="1", name="custAddr", id="addr")
                              label Contact No
                              span.custContact
                                 input.form-control(required, type="text", name="custContact")
                           button.btn.btn-success(type="submit") Save
                           button.btn.btn-default(type="reset") Reset
                        p.text-success #{taskInfo}
                     .row
                        .col-lg-6
                           #map-canvas


