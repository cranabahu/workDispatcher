template(name="viewDetailTask")
   #page-wrapper
      .row
         .col-lg-12
            h1.page-header Detail Task
      .row
         .col-lg-12
            .panel.panel-default
               .panel-heading
                  i.fa.fa-tasks.fa-fw
                  label(style="color:green;font-size:150%") Detail
               .panel-body
                  .row
                     .col-lg-6
                        form(id="frmViewTask")
                           .form-group
                              each task
                                 p(style="color:orange;font-size:150%")
                                    label Task Information
                                 label Task Id
                                 input.form-control(readonly, type="text", name="taskId", value='#{taskId}')
                                 label Repair part
                                 input.form-control.repairPart(readonly, type="text", name="repairPart", value='#{repairPart}')
                                 label Serverity
                                 select.form-control(readonly, name="serverity",select= '#{severity}')
                                    option Normal
                                    option High
                                    option Critical
                                 label Due Date
                                 input.form-control(readonly, type="date", name='taskDuedate', value='#{dueDate}')
                                 label Task Description
                                 textarea.form-control(readonly, rows="3", name="taskDesc")
                                    |#{desc}
                                 p(style="color:orange;font-size:150%")
                                    label Customer Information
                                 label Customer
                                 input.form-control(readonly, required, type="text", name="customer", value='#{customer}')
                                 label Address
                                 textarea.form-control(readonly, rows="3", name="custFullAddr", id="fullAddr")
                                    |#{custFullAddr}
                                 label Town
                                 textarea.form-control(readonly, rows="1", name="custAddr", id="addr")
                                    |#{location}
                                 label Contact No
                                 span.custContact
                                    input.form-control(readonly, type="text", name="custContact", value='#{contact}')
                           button.btn.btn-success Attachments
