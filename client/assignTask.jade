template(name="assignTask")
   #page-wrapper
      .row
         .col-lg-12
            h1.page-header Assign Task
      .row
         .col-lg-12
            .panel.panel-default
               .panel-heading
                  button.btn.btn-primary.btn-circle(type="")
                     i.fa.fa-bolt
                  label(style="color:green;font-size:150%")  Assign
               .panel-body
                  .row
                     fieldset(disabled="")
                        form
                           .form-group
                              each task
                                 .col-lg-6
                                    label Task Id
                                    input.form-control(type="text", name="taskId", value='#{taskId}')
                                    label Repair part
                                    input.form-control(type="text", name="repairPart", value='#{repairPart}')
                                    label Town
                                    input.form-control(type="text", name="customer", value='#{custAddr}')
                                 .col-lg-6
                                    label Customer
                                    input.form-control(type="text", name="customer", value='#{customer}')
                                    label Status
                                    input.form-control(type="text", name='status', value='#{status}')
                                    label Contact
                                    input.form-control(type="text", name='status', value='#{contact}')
      +assignee

template(name="assignee")
   .row
      .col-lg-12
         h3.page-header Available Agents
   .row
      .col-lg-12
         .panel.panel-default
            .panel-heading
               button.btn.btn-primary.btn-circle(type="")
                  i.fa.fa-list
               label(style="color:green;font-size:150%")  Assignees
            .panel-body
               .table-responsive
                  table.table.table-bordered.table-hover
                     thead
                        tr
                           th Emp NO
                           th Name
                           th Location
                           th Dispatched Task
                           th Accepted Task
                     tbody
                        each availableEmp
                           tr(class='selectedRow #{selectedAssignee}')
                              td #{empNo}
                              td #{name}
                              td #{location}
                              td #{dispatchTaskCount}
                              td #{acceptedTaskCount}
               a.btn.btn-primary.dispatch(type="button") Assign
   .row
      .col-lg-4
         if error
            .alert.alert-danger.alert-dismissable
               button.close(type="button", data-dismiss="alert", aria-hidden="true") &#215;
               | #{error}